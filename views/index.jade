extends layout

block content
  h1= title
  p This is DFUNKT REBORN!

  h2 Creating a new user
  form(action="/users/create", method="post")
    input(type="text", name="name")
    input(type="submit")
    
  h2 Create a new Role
  form(action="/roles/create", method="post")
    input(type="text", name="name", placeholder="Name")
    input(type="text", name="description", placeholder="Desc")
    input(type="email", name="email", placeholder="mail")
    input(type="submit")
    
  h2 Creating a Mandate
  form(action="/mandates/create", method="post")
    input(type="date", name="start")
    input(type="date", name="end")
    input(type="number", name="roleId")
    input(type="text", name="username", placeholer="User")
    //input(list="roles", name="role")
      //datalist#roles 
        //option(value="qwe")
        //option(value="foo")
        //option(value="bar")
    input(type="submit")
    
  

  h2 Users

  ul
  each user in users
    li
      = user.name
      
  h2 Roles
  
  ul
  each role in roles
    li
      ul
        li
          = role.name
        li    
          = role.description
        li    
          = role.email
        li    
          = role.id

  h2 Mandates
  each mandate in mandates
    ul
      li
        = mandate.UserId
      li
        = mandate.RoleId    
      li
        = mandate.start
      li
        = mandate.end
      
        
