extends layout

block content
    div(id='content')
      div(class='row')
        include sidebar.jade
        div(class='col-sm-8 col-md-9')
          h1 Aktuella mandat
          table(class='table')
            thead
              tr
                th Namn
                th Grupp
                th E-post
                th Nuvarande innehavare
            tbody
              each mandate in mandates
                tr
                  th
                    a(href='/position/' + mandate.Role.identifier)
                      = mandate.Role.title
                  th
                    = groups[mandate.Role.GroupId-1].name
                  th
                    = mandate.Role.email
                  th 
                    a(href='/user/' + mandate.User.kthid)
                      = mandate.User.first_name + " " + mandate.User.last_name

        div(class='clear')
      
