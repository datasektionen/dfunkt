    script(type="text/javascript").
      function getLoginUrl() {
        return "/login/oidc"
      }

      var loginname="#{user}";
      var login_text = "Logga in";
      var login_href = getLoginUrl();
      if(loginname != "") {
        login_text = "Logga ut";
        login_href = "/login/logout";
      }

      window.methone_conf = {
        system_name: "dfunkt",
        color_scheme: "purple",
        login_text: login_text,
        login_href: login_href,
        links: []
      };
    script(async="", src="//methone.datasektionen.se/bar.js").
